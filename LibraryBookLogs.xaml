                                </Grid.RowDefinitions>
                                <Grid Background="#FFFBF9F9">
                                    <TextBox Width="400" FontSize="20"  materialDesign:HintAssist.Hint="SEARCH..." Style="{DynamicResource MaterialDesignFloatingHintTextBox}"  />
