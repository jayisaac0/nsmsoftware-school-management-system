                                <Grid Grid.Row="1" Background="White">
                                    <Rectangle Margin="5" Fill="WhiteSmoke" RadiusY="10" Grid.Row="1" RadiusX="10" Stroke="Black" StrokeThickness="0">
                                        <Rectangle.Effect>
                                            <DropShadowEffect ShadowDepth="2"/>
                                        </Rectangle.Effect>
                                    </Rectangle>
                                    <DataGrid Margin="15" x:Name="LostBooks">

                                    </DataGrid>
                                </Grid>
                            </Grid>
                        </Grid>

                    </Grid>

                </Grid>
            </TabItem>


